<div class = "sign">
  <div class="login-wrap">
    <div class="login-html">
      <div class="login-form">


        <%= form_with(model: city, local: true) do |form| %>
        <% if city.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

          <ul>
            <% city.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="group">
          <label for="user" class="label">City name or zip code</label>
          <%= form.text_field :name, id: :city_name, class: "input" %>
        </div>
        <div class="actions">
          <%= form.submit class: "button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
